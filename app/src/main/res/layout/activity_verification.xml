<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appbackground"
    tools:context=".Activity.VerificationActivity">

    <TextView
        android:id="@+id/tv_tieuDe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/bungee"
        android:gravity="center"
        android:text="BC-Message"
        android:textColor="@color/white"
        android:textSize="33sp" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/gaAnimation"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_below="@+id/tv_tieuDe"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        app:lottie_rawRes="@raw/ga" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gaAnimation"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/exo2_bold"
        android:text="Chúng tôi vừa gửi mã OTP tới:"
        android:textAlignment="center"
        android:textColor="@color/tim_dam"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_sdt_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/exo2_bold"
        android:text="+84 321 123 321"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />


    <androidx.cardview.widget.CardView
        android:id="@+id/otp_view"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/tv_sdt_verify"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="6">

            <EditText
                android:id="@+id/otp1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="*"
                android:inputType="number"
                android:textAlignment="center"
                android:textColor="@color/tim_dam"
                android:textColorHint="@color/tim_dam"
                android:textSize="30sp"
                android:maxLength="1"/>

            <EditText
                android:id="@+id/otp2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="*"
                android:inputType="number"
                android:textAlignment="center"
                android:textColor="@color/tim_dam"
                android:textColorHint="@color/tim_dam"
                android:textSize="30sp"
                android:maxLength="1"/>

            <EditText
                android:id="@+id/otp3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="*"
                android:inputType="number"
                android:textAlignment="center"
                android:textColor="@color/tim_dam"
                android:textColorHint="@color/tim_dam"
                android:textSize="30sp"
                android:maxLength="1"/>

            <EditText
                android:id="@+id/otp4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="*"
                android:inputType="number"
                android:textAlignment="center"
                android:textColor="@color/tim_dam"
                android:textColorHint="@color/tim_dam"
                android:textSize="30sp"
                android:maxLength="1"/>

            <EditText
                android:id="@+id/otp5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="*"
                android:inputType="number"
                android:textAlignment="center"
                android:textColor="@color/tim_dam"
                android:textColorHint="@color/tim_dam"
                android:textSize="30sp"
                android:maxLength="1"/>

            <EditText
                android:id="@+id/otp6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="*"
                android:inputType="number"
                android:textAlignment="center"
                android:textColor="@color/tim_dam"
                android:textColorHint="@color/tim_dam"
                android:textSize="30sp"
                android:maxLength="1"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_verify"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        android:backgroundTint="@color/purple"
        android:text="Xác thực"
        android:layout_below="@+id/otp_view"
        android:textAllCaps="true"
        android:textSize="18sp"
        app:cornerRadius="20dp" />


</RelativeLayout>